<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        tools:context=".village.ViewApplications">

        <ImageView
            android:id="@+id/apic"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:src="@drawable/glogo"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/applyfor"
            android:layout_width="match_parent"
            android:textColor="#f00"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Apply for" />

        <TextView
            android:id="@+id/adate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:textSize="15dp"
            android:text="Apply for" />

        <TextView
            android:id="@+id/afee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:visibility="gone"
            android:textSize="20dp"
            android:text="Apply for" />

        <TextView
            android:id="@+id/aname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="Apply for" />

        <TextView
            android:id="@+id/aage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:textSize="15dp"
            android:text="Apply for" />

        <TextView
            android:id="@+id/afname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:textSize="15dp"
            android:text="Apply for" />

        <TextView
            android:id="@+id/amname"
            android:layout_width="match_parent"
            android:textColor="#f00"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="Apply for" />

        <TextView
            android:id="@+id/amobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:textSize="15dp"
            android:text="Apply for" />

        <TextView
            android:id="@+id/aaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:textSize="15dp"
            android:text="Apply for" />

        <TextView
            android:id="@+id/avillage"
            android:layout_width="match_parent"
            android:textColor="#f00"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="Apply for" />

        <TextView
            android:id="@+id/ataluk"
            android:layout_width="match_parent"
            android:textColor="#f00"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="Apply for" />

        <TextView
            android:id="@+id/adist"
            android:layout_width="match_parent"
            android:textColor="#f00"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="Apply for" />

        <TextView
            android:id="@+id/ajob"
            android:layout_width="match_parent"
            android:textColor="#f00"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Apply for" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="100dp"
          android:src="@drawable/qr"
            android:layout_height="100dp" />
        <ImageView
            android:layout_width="100dp"
            android:src="@drawable/tick"
            android:layout_marginLeft="150dp"
            android:layout_height="100dp" />
    </LinearLayout>

        <TextView
            android:id="@+id/adoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#1E06F0"
            android:text="Digital Signature\nDigitally Verified" />
        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:inputType="textMultiLine"
            android:hint="opinion"
            android:background="@drawable/edit1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnrej"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/button"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnissue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate PDF"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/button"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>